<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.2">
    <persistence-unit name="saude" transaction-type="RESOURCE_LOCAL">
        <!-- Provider é opcional; o Hibernate é detectado no classpath -->
        <!-- <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider> -->

        <!-- Entidades (ajuste os nomes se mudar as classes) -->
        <class>saude.dominio.Usuario</class>
        <class>saude.dominio.RegistroSaude</class>
        <class>saude.dominio.MetaSaude</class>
        <class>saude.dominio.Alerta</class>

        <properties>
            <!-- ===== JDBC / MySQL 8 ===== -->
            <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.url"
                      value="jdbc:mysql://localhost:3306/backend?useSSL=false&amp;allowPublicKeyRetrieval=true&amp;serverTimezone=UTC"/>
            <property name="javax.persistence.jdbc.user" value="saude"/>
            <property name="javax.persistence.jdbc.password" value="saude123"/>

            <!-- Dialeto do MySQL 8 -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL8Dialect"/>

            <!-- Esquema: em DEV use 'update'; para a entrega final, prefira 'validate' -->
            <property name="hibernate.hbm2ddl.auto" value="update"/>

            <!-- Logs de SQL -->
            <property name="hibernate.show_sql" value="false"/>
            <property name="hibernate.format_sql" value="true"/>

            <!-- Evita avisos de timezone e melhora segurança -->
            <property name="hibernate.jdbc.time_zone" value="UTC"/>

            <!-- Ajustes opcionais (pode manter como está) -->
            <property name="hibernate.connection.provider_disables_autocommit" value="true"/>
            <property name="hibernate.generate_statistics" value="false"/>
        </properties>
    </persistence-unit>
</persistence>